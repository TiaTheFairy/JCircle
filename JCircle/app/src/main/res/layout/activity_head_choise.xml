<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".head_choise">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="417dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="请选择你的头像："
            android:textColor="@color/material_on_background_disabled"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="265dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_a1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/a3" />

            <ImageView
                android:id="@+id/imageView_a2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a4" />

            <ImageView
                android:id="@+id/imageView_a3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a6" />

            <ImageView
                android:id="@+id/imageView_a4"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_a5"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/a5" />

            <ImageView
                android:id="@+id/imageView_a6"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/a2" />

            <ImageView
                android:id="@+id/imageView_a7"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a1" />

            <ImageView
                android:id="@+id/imageView_a12"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/a10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_a8"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a11" />

            <ImageView
                android:id="@+id/imageView_a9"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a7" />

            <ImageView
                android:id="@+id/imageView_a10"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a9" />

            <ImageView
                android:id="@+id/imageView_a11"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/a8" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>